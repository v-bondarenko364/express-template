{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false, // disable property checking for sequelize-typescript
    "target": "esnext",
    "module": "commonjs",
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ],
    "baseUrl": "src"
  },
  "include": [
    "src/**/*",
    "src/*",
    "typings"
  ],
  "exclude": [
    "node_modules"
  ]
}
